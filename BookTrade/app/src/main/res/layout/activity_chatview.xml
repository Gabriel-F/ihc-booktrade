<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="#dddddd"
    tools:showIn="@layout/activity_chatview">


    <android.support.v7.widget.CardView
        android:id="@+id/conversa_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:clickable="true"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="clickCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"

>


            <ImageView
                android:id="@+id/image_1_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/persona1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="JoÃ£o da Silva"
                app:layout_constraintStart_toEndOf="@id/image_1_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_1_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/livro1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:text="Livro: Quincas Borba"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_1_2" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/conversa_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="clickCardView"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversa_1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">


            <ImageView
                android:id="@+id/image_2_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/persona2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Joana Silveira"
                app:layout_constraintStart_toEndOf="@id/image_2_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_2_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/livro2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:text="Livro: Um Conto de Natal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_2_2" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/conversa_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="clickCardView"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversa_2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="4dp">


            <ImageView
                android:id="@+id/image_3_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/persona3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:text="Joana Silveira"
                app:layout_constraintStart_toEndOf="@id/image_3_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_3_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/livro2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:text="Livro: Um Conto de Natal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_3_2" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>