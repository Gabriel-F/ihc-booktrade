<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_offer_detail">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.483"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/imageView2.."
                        android:layout_width="94dp"
                        android:layout_height="141dp"
                        app:layout_constraintStart_toStartOf="@id/guideline3.."
                        app:layout_constraintTop_toTopOf="@id/guideline5.."
                        app:srcCompat="@drawable/crime_castigo"
                        tools:srcCompat="@drawable/crime_castigo" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline3.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="30dp" />


                    <ImageView
                        android:id="@+id/imageView3.."
                        android:layout_width="94dp"
                        android:layout_height="141dp"
                        app:layout_constraintEnd_toStartOf="@id/guideline4.."
                        app:layout_constraintTop_toTopOf="@id/guideline5.."
                        app:srcCompat="@drawable/vidas_secas"
                        tools:srcCompat="@drawable/vidas_secas" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline4.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="30dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline5.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="35dp" />

                    <ImageView
                        android:id="@+id/imageView4.."
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/seta_bi" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline7.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="86dp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline8.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="158dp" />

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2.."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="(Você)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Titulo: Crime e castigo"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView3."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Autor: Fiódor Dostoievski"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView4."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Descrição: Brochura em bom estado de conservação. Apresenta sinais de uso e manuseio, cortes amarelados e com manchas de oxidação. Sem grifos ou anotações."
                            android:textSize="18dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteY="203dp">

                        <TextView
                            android:id="@+id/textView2."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="(João Alberto)"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Titulo: Vidas Secas"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Autor: Graciliano Ramos"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Descrição: Livro se encontra em bom estado, com grifos em algumas páginas."
                            android:textSize="18dp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </ScrollView>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="227dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/const_lay"
        >

        <ImageButton
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"

            android:backgroundTint="#FAFAFA"
            android:scaleType="centerInside"
            android:src="@drawable/dislike_btn"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#FAFAFA"
            android:scaleType="centerInside"
            android:src="@drawable/like_btn"
            app:layout_constraintEnd_toStartOf="@id/guideline6"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="80dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7916667" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>