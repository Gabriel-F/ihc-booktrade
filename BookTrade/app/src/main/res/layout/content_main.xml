<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/app_bar_main"
        android:orientation="vertical">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/cardView0"
                    android:onClick="clickCardView">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.constraint.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="30dp" />


                        <android.support.constraint.Guideline
                            android:id="@+id/guideline4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="30dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="30dp" />


                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="52dp"
                            android:layout_height="43dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/seta_bi"
                            android:elevation="1dp"/>

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintStart_toStartOf="@id/guideline3"
                            app:layout_constraintTop_toBottomOf="@id/guideline5"
                            app:srcCompat="@drawable/metamorfose"
                            tools:srcCompat="@drawable/metamorfose"
                            android:layout_marginBottom="30dp"/>

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintEnd_toStartOf="@id/guideline4"
                            app:layout_constraintTop_toBottomOf="@id/guideline5"
                            app:srcCompat="@drawable/quincas"
                            tools:srcCompat="@drawable/quincas" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="86dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="158dp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/dislikeview"
                            tools:layout_editor_absoluteY="30dp"
                            android:alpha="0"/>

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/likeview"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:alpha="0"/>





                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/second"
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintStart_toStartOf="@id/guideline3."
                            app:layout_constraintTop_toTopOf="@id/guideline5."
                            app:srcCompat="@drawable/metamorfose"
                            tools:src="@drawable/metamorfose" />

                        <ImageView
                            android:id="@+id/imageView3."
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintEnd_toStartOf="@id/guideline4."
                            app:layout_constraintTop_toTopOf="@id/guideline5."
                            app:srcCompat="@drawable/um_conto"
                            tools:src="@drawable/um_conto" />

                        <ImageView
                            android:id="@+id/imageView4."
                            android:layout_width="52dp"
                            android:layout_height="43dp"
                            app:srcCompat="@drawable/seta_bi"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                        <android.support.constraint.Guideline
                            android:id="@+id/guideline3."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="30dp" />


                        <android.support.constraint.Guideline
                            android:id="@+id/guideline4."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="30dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline5."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="30dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline7."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="86dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline8."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="158dp" />


                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/cardView1"
                    android:onClick="clickCardView">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/imageView2.."
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintStart_toStartOf="@id/guideline3.."
                            app:layout_constraintTop_toTopOf="@id/guideline5.."
                            app:srcCompat="@drawable/crime_castigo"
                            tools:srcCompat="@drawable/crime_castigo" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline3.."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="30dp" />


                        <ImageView
                            android:id="@+id/imageView3.."
                            android:layout_width="94dp"
                            android:layout_height="141dp"
                            app:layout_constraintEnd_toStartOf="@id/guideline4.."
                            app:layout_constraintTop_toTopOf="@id/guideline5.."
                            app:srcCompat="@drawable/vidas_secas"
                            tools:srcCompat="@drawable/vidas_secas" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline4.."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="30dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline5.."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="30dp" />

                        <ImageView
                            android:id="@+id/imageView4.."
                            android:layout_width="52dp"
                            android:layout_height="43dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/seta_bi" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline7.."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_begin="86dp" />

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline8.."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="158dp" />


                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

</LinearLayout>
